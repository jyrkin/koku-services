<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	version="1.0">
<!--    <persistence-unit name="kokuDatabase" transaction-type = "JTA">-->
    <!-- for unit tests with OpenJPA and Spring -->
	<persistence-unit name="kokuDatabase" transaction-type = "RESOURCE_LOCAL">
		<jta-data-source>java:/jdbc/koku</jta-data-source>
		<properties>
			<!-- JBoss specific -->
			<!-- Following is for development only - use "validate" in production instead-->
			<property name="hibernate.hbm2ddl.auto" value="update" />
		</properties>
		<class>fi.arcusys.koku.kv.service.datamodel.AbstractEntity</class>
		<class>fi.arcusys.koku.kv.service.datamodel.Message</class>
        <class>fi.arcusys.koku.kv.service.datamodel.Request</class>
        <class>fi.arcusys.koku.kv.service.datamodel.Question</class>
        <class>fi.arcusys.koku.kv.service.datamodel.Response</class>
        <class>fi.arcusys.koku.kv.service.datamodel.Answer</class>
<!--        <class>fi.arcusys.koku.kv.service.datamodel.YesNoAnswer</class>-->
<!--        <class>fi.arcusys.koku.kv.service.datamodel.FreeTextAnswer</class>-->
		<class>fi.arcusys.koku.kv.service.datamodel.Folder</class>
		<class>fi.arcusys.koku.kv.service.datamodel.MessageRef</class>
        <class>fi.arcusys.koku.kv.service.datamodel.User</class>
	</persistence-unit>
</persistence>