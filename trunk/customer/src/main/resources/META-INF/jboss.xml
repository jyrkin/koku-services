<?xml version="1.0" encoding="UTF-8"?>
<jboss xmlns="http://www.jboss.com/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.jboss.com/xml/ns/javaee http://www.jboss.org/j2ee/schema/jboss_5_1.xsd"
  version="5.1">

  <security-domain>koku-domain</security-domain>
  
  <webservices>
    <context-root>/customer-service</context-root>
  </webservices>

  <enterprise-beans>
    <session>
      <ejb-name>CustomerServiceEndpointBean</ejb-name>
      <port-component>
        <port-component-name>CustomerService</port-component-name>
        <auth-method>BASIC</auth-method>
      </port-component>
    </session>

    <session>
      <ejb-name>CommunityServiceEndpointBean</ejb-name>
      <port-component>
        <port-component-name>CommunityService</port-component-name>
        <auth-method>BASIC</auth-method>
      </port-component>
    </session>
  </enterprise-beans>

</jboss>
